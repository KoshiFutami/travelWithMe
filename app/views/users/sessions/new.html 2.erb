<% @page_title = 'Log in' %>

<div class="card p-5 mb-3">
  <h1 class="card-title h3 text-center">Log in to your account</h1>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", placeholder: "Email address", class:'form-control icon-email' %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %><br />
      <div class="icon-password"></div>
      <%= f.password_field :password, autocomplete: "current-password", type: "password", placeholder:"Password", class: 'form-control icon-password' %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <%# <div class="actions"> %>
      <%= f.submit "Log In", class: "btn btn-primary btn-lg btn-block" %>
    <%# </div> %>
  <% end %>

  <div class="text-center mt-4">
    <span class="mr-1">New to the App?</span>
    <%= link_to "Sign Up", new_registration_path(resource_name), class:"d-inline" %>
  </div>

</div>

<div class="text-right">
  <%= link_to "Forgot your password?", new_password_path(resource_name) %>
</div>
