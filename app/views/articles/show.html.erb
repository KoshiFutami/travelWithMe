<article>
    <h1 class="text-head"><%= @article.title %></h1>
    <p class="article-author"><%= link_to @article.user.username, user_path(@article.user) %></p>
    <ul class="article-info">
        <li><%= @article.created_at.strftime("%B %d, %Y") %></li>
        <li>Category</li>
    </ul>

    <% if @article.image? %>
        <%= image_tag @article.image.url, class: "article-image" %>
    <% end %>

    <p class="article-content"><%= @article.body %></p>

    <% if user_signed_in? && @article.user_id == current_user.id %>
        <div class="btn-groups mx-auto mb-3">
            <%= link_to "Edit this post", edit_article_path(@article), class: 'pr-2' %> | 
            <%= link_to "Delete this post", article_path(@article), method: :delete, data: { confirm: 'Are you sure?'}, class: 'pl-2'  %>
        </div>
    <% end %>
</article>

<%= link_to "Back", articles_path, class: "btn btn-yellow" %>

