<div class="border p-5">
    <%= form_with model: @article do |f| %>
    
        <div class="form-group">
            <%= f.label :title, "What is the title of your post?" %>
            <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :body, "Write whatever you like in English!" %>
            <%= f.text_area :body, size: "20x10",class: "form-control" %>
        </div>

        <div class="form-group">
            <p>Choose Tags!</p>
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
                <%= tag.label do %>
                    <%= tag.check_box %>
                    <%= tag.text %>
                <% end %>
            <% end %>
        </div>

        <div class="form-group">
            <%=  %>
        </div>

        <div class="form-group">
            <%= f.label :image, "Upload the picture you want to show the readers!" %><br>
            <%= image_tag @article.image.thum.url if @article.image? %><br>
            <%= f.file_field :image, class: "mt-2" %>
        </div>

        <div class="text-center">
            <%= f.submit "Post it !", class: "btn btn-blue" %>
        </div>
    
    <% end %>
</div>